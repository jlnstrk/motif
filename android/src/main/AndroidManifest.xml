<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.julianostarek.motif">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:label="Motif"
        android:name="de.julianostarek.motif.MotifApp"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motif">
        <activity
            android:name="de.julianostarek.motif.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="motif" android:host="spotify-auth-callback" />
            </intent-filter>
        </activity>

        <receiver
            android:exported="true"
            android:name="de.julianostarek.motif.SpotifyActiveReceiver">
            <intent-filter>
                <action android:name="com.spotify.music.active" />
            </intent-filter>
        </receiver>
    </application>
</manifest> 